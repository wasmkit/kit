{
    // types
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "node",

        "strict": true,

        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist/types"
    },
    "include": [
        "src"
    ],
    "exclude": []
}